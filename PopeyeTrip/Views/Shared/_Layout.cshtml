    <meta name="description" content="PopEyeTrip is The Only Korea Tour Guide and new way to travel like real local Koreans." />
    <meta name="keywords" content="popeyetrip. koreatrip, koreatravel, koreatour" />
    <meta property="wb:webmaster" content="bbb5edb976959cc1" />

    @RenderSection("AdditionalMeta", false)

    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/jquery-ui")
    @Scripts.Render("~/bundles/jquery-ui")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/poploading")
    @Scripts.Render("~/bundles/imagesloaded")
    @Styles.Render("~/Content/lightslider")
    @Scripts.Render("~/bundles/lightslider")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/summernote")
    @Scripts.Render("~/bundles/summernote")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.1.13/jquery.mousewheel.min.js"></script>
    @Styles.Render("~/Content/lightgallery")
    @Scripts.Render("~/bundles/lightgallery")
    
</head>

<body style="padding-bottom:0px;">
    <div >
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container" id="navContainer">
                <div class="navbar-header">
                    <button id="navbartoggle" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-controls="navbar-collapse" onclick="navClick()">
                        <i class="icon-sidemenu"></i>
                    </button>
                    <div class="hidden-xs navbar-brand">
                        <a class="icon-logo" href="/"></a>
                    </div>
                    <div class="visible-xs navbar-brand-xs">
                        <a class="icon-logo" href="/"></a>
                    </div>
                </div>
                <div class="hidden-xs">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Info", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                        }
                    </ul>
                </div>
                <div class="hidden-xs">
                    @Html.Action("UserState", "Base")
                </div>
            </div>
        </div>
        <div id="booltoggle" class="visible-xs navbar-collapse collapse" onclick="NavbarToggle()">
            <ul id="blockarea" class="blockarea"></ul>
        </div>
        <div class="visible-xs navbar-collapse collapse">
            <div>
                @Html.Action("UserState", "Base")
                @*<hr class="nav-hr" />
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Info", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>*@
                @if (User.IsInRole("Admin"))
                {
                    <hr class="nav-hr" />
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    </ul>
                }
            </div>
        </div>
        <div id="body" class="container body-content">
            @RenderBody()
        </div>
        <footer style="background-color:#000000;">
            <div class="container">
                <div class="col-sm-6" style="height:126px;">
                    <div class="col-xs-12 center" style="padding-left:15px;">
                        <a class="icon-facebook-footer" style="float:left; cursor:pointer;" href="https://www.facebook.com/PopEyeTripOn/"></a>
                        <a class="icon-youtube-footer" style="float:left; cursor:pointer;" href="https://www.youtube.com/channel/UCwBcQJwSJsRK_7ggfD9jI-w"></a>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="col-xs-8 zero-space">
                        <p style="margin:0px;">KOMEDIA | Jeong-hyeon Ko</p>
                        <p style="margin:0px;">21 Hwangsaeul-ro 360beon-gil</p>
                        <p style="margin:0px;">Bundang-gu, Seongnam-si, Gyeongi-do</p>
                        <p style="margin:0px;">CONTACT | PopEyeTrip.on@gmail.com</p>
                        <p style="margin:0px;">BUSINESS NO. | 287-67-00046</p>
                        <p style="margin:0px;"><a style="cursor:pointer;" href="~/Home/Agreement">Terms of Service</a> | <a style="cursor:pointer;" href="~/Home/PrivacyPolicy">Privacy Policy</a></p>
                        <p style="margin:0px; color:#b21e7e;">Copyright &copy; 2015 POP.EYE.TRIP</p>
                    </div>
                    <div class="col-xs-4 zero-space" style="height:104px;">
                        <a class="icon-logo-footer center" href="/"></a>
                    </div>
                </div>
            </div>
        </footer>

        <div id="activelogin" class="unactivelogin">
            <div id="closesquare" class="" onclick="UnBlockInput()"></div>
            @Html.Partial("~/Views/Account/_LoginPartial.cshtml")
        </div>
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>
